{
  "TrainingJobName": "__TrainingJobName__",
  "HyperParameters": {
    "learning_rate": "0.0001",
    "servable_model_dir": "/opt/ml/model",
    "loss_weight": "1.0",
    "use_context": "False",
    "max_click_history": "3",
    "num_epochs": "2",
    "max_title_length": "16",
    "entity_dim": "128",
    "word_dim": "300",
    "batch_size": "128",
    "perform_shuffle": "1",
    "checkpointPath": "/opt/ml/input/data"
  },
  "AlgorithmSpecification": {
    "TrainingImage": "__TrainingImage__",
    "TrainingInputMode": "File",
    "MetricDefinitions": [
      {
        "Name": "auc",
        "Regex": "auc = (.*?),"
      }
    ]
  },
  "RoleArn": "__RoleArn__",
  "InputDataConfig": [
    {
      "DataSource": {
        "S3DataSource": {
          "S3DataType": "S3Prefix",
          "S3Uri": "s3://__BUCKET__/__KEY_PREFIX__/model/sort/action/dkn/train.csv",
          "S3DataDistributionType": "FullyReplicated"
        }
      },
      "ChannelName": "train"
    },
    {
      "DataSource": {
        "S3DataSource": {
          "S3DataType": "S3Prefix",
          "S3Uri": "s3://__BUCKET__/__KEY_PREFIX__/model/sort/action/dkn/test.csv",
          "S3DataDistributionType": "FullyReplicated"
        }
      },
      "ChannelName": "eval"
    }
  ],
  "OutputDataConfig": {
    "S3OutputPath": "s3://__BUCKET__/__KEY_PREFIX__/model/sort/action/dkn/output/"
  },
  "ResourceConfig": {
    "InstanceCount": 1,
    "InstanceType": "ml.p2.xlarge",
    "VolumeSizeInGB": 50
  },
  "StoppingCondition": {
    "MaxRuntimeInSeconds": 36000
  }
}
